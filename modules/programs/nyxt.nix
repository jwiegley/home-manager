{ config, lib, pkgs, ... }:

with lib;

let cfg = config.programs.nyxt;
in {
  meta.maintainers = with lib.maintainers; [ theesm ];

  options.programs.nyxt = {
    enable = mkEnableOption "Nyxt";

    package = mkPackageOption pkgs "nyxt" { };

    extraConfig = mkOption {
      type = types.lines;
      default = "";
      description = ''
        Configuration to include in nyxt default config.lisp file.
      '';
    };
  };

  config = mkIf cfg.enable {
    home.packages = [ cfg.package ];

    xdg.configFile."nyxt/config.lisp" = mkIf (cfg.extraConfig != "") {
      text = ''
        ; Generated by Home Manager.
        ${cfg.extraConfig}
      '';
    };
  };
}
